# Database
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=buscador
DB_USER=buscador
DB_PASS=secret
DB_CHARSET=utf8mb4

# Admin credentials
ADMIN_USERNAME=admin
# Use password_hash output
ADMIN_PASSWORD_HASH=
ADMIN_SESSION_KEY=superadmin_authenticated
ADMIN_PASSWORD=

# Uploads
STORAGE_PATH=/workspace/COPIA-Buscador/storage
UPLOADS_PATH=
UPLOAD_MAX_BYTES=10485760
UPLOAD_ALLOWED_MIMES=application/pdf,image/png,image/jpeg
UPLOAD_ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg
UPLOAD_CLIENT_QUOTA_BYTES=209715200

# Limits
SEARCH_MAX_CODES=25
LIST_PER_PAGE_MAX=100

# Logging
LOG_FILE=/workspace/COPIA-Buscador/logs/app.log

# Security
PDF_HIGHLIGHTER_URL=
