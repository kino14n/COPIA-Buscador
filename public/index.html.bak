<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Buscador de Documentos</title>
</head>
<body class="bg-gray-100 p-6">
  <div class="max-w-5xl mx-auto">
    <h1 class="text-2xl font-semibold mb-6 text-center">Buscador de Documentos</h1>
    <div class="bg-white rounded-lg shadow p-6 flex gap-6">
      <!-- CRUD Documentos -->
      <div class="w-1/2">
        <h2 class="text-xl font-medium mb-4">Documentos</h2>
        <!-- Formulario Crear/Editar -->
        <form id="formDoc" class="space-y-4" enctype="multipart/form-data">
          <input type="hidden" id="docId" name="id" />
          <div><label class="block text-sm font-medium">Fecha</label>
            <input type="date" id="date" name="date" class="mt-1 block w-full border-gray-300 rounded-md p-2" required /></div>
          <div><label class="block text-sm font-medium">Nombre</label>
            <input type="text" id="name" name="name" class="mt-1 block w-full border-gray-300 rounded-md p-2" required /></div>
          <div><label class="block text-sm font-medium">Códigos (uno por línea)</label>
            <textarea id="codes" name="codes" rows="3" class="mt-1 block w-full border-gray-300 rounded-md p-2" required></textarea></div>
          <div><label class="block text-sm font-medium">PDF</label>
            <input type="file" id="file" name="file" accept=".pdf" class="mt-1 block w-full" /></div>
          <button type="submit" class="mt-4 w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700">Guardar</button>
        </form>
        <hr class="my-6" />
        <!-- Selección para nuevo registro -->
        <button id="btnNew" class="w-full bg-green-500 text-white py-2 rounded-md hover:bg-green-600">Nuevo Documento</button>
      </div>
      <!-- Listado y Búsqueda -->
      <div class="w-1/2">
        <h2 class="text-xl font-medium mb-4">Buscar • Listar</h2>
        <textarea id="searchCodes" rows="3" placeholder="Buscar por códigos (uno por línea)" class="block w-full border-gray-300 rounded-md p-2 mb-2"></textarea>
        <div class="flex gap-2 mb-4">
          <button id="btnSearch" class="flex-1 bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700">Buscar</button>
          <button id="btnList" class="flex-1 bg-gray-300 text-gray-700 py-2 rounded-md hover:bg-gray-400">Listar Todos</button>
        </div>
        <div id="results" class="space-y-4"></div>
      </div>
    </div>
  </div>
  <script>
    const api = 'api.php';
    const form = document.getElementById('formDoc');
    const btnNew = document.getElementById('btnNew');
    const btnList = document.getElementById('btnList');
    const btnSearch = document.getElementById('btnSearch');

    window.onload = () => listDocs();
    btnNew.onclick = clearForm;
    btnList.onclick = listDocs;
    btnSearch.onclick = searchDocs;

    form.onsubmit = async e => {
      e.preventDefault();
      const data = new FormData(form);
      data.append('action', form.docId.value ? 'edit' : 'upload');
      const res = await fetch(api + '?action=' + (form.docId.value ? 'edit' : 'upload'), {method:'POST', body:data});
      alert((await res.json()).message);
      listDocs(); clearForm();
    };

    async function listDocs() {
      const res = await fetch(api + '?action=list');
      renderResults(await res.json());
    }

    async function searchDocs() {
      const codes = document.getElementById('searchCodes').value.split(/\r?\n/).map(s=>s.trim()).filter(Boolean);
      const res = await fetch(api + '?action=search', {method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({codes})});
      renderResults(await res.json());
    }

    function renderResults(docs) {
      const cont = document.getElementById('results'); cont.innerHTML='';
      docs.forEach(d=>{
        const div = document.createElement('div'); div.className='p-4 bg-gray-50 rounded';
        div.innerHTML = `
          <h3 class="font-semibold">${d.name} <small>(${d.date})</small></h3>
          <a href="../uploads/${d.path}" target="_blank">Ver PDF</a>
          <div class="mt-2 flex gap-2">
            <button class="px-2 py-1 bg-yellow-400 rounded" onclick="editDoc(${d.id})">Editar</button>
            <button class="px-2 py-1 bg-red-500 text-white rounded" onclick="deleteDoc(${d.id})">Eliminar</button>
          </div>
        `;
        cont.appendChild(div);
      });
    }

    async function editDoc(id) {
      const res = await fetch(api + '?action=list');
      const docs = await res.json();
      const doc = docs.find(d=>d.id===id);
      form.docId.value = doc.id;
      form.date.value = doc.date;
      form.name.value = doc.name;
      form.codes.value = doc.codes.join('\n');
    }

    async function deleteDoc(id) {
      if(!confirm('¿Eliminar este documento?')) return;
      const res = await fetch(api + '?action=delete&id='+id);
      alert((await res.json()).message);
      listDocs();
    }

    function clearForm() {
      form.reset(); form.docId.value='';
    }
  </script>
</body>
</html>
